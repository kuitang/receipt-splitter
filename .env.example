# Environment variables for deployment
# Note: python-dotenv is not used - set these directly in your environment

# Django Configuration
SECRET_KEY=your-production-secret-key-here
DEBUG=False

# Database (automatically set by Fly.io when PostgreSQL is attached)
DATABASE_URL=postgres://username:password@hostname:port/database_name

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Security Settings (enabled by default in production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS=True

# Allowed Hosts (comma-separated, .fly.dev added automatically)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,testserver,.fly.dev,your-custom-domain.com

# Example production configuration:
# SECRET_KEY=a!cvm#g9s%ns@s&r57ugi%oxc8!25m2-^h@odqeneotig1w)!0
# DEBUG=False
# OPENAI_API_KEY=sk-your-actual-openai-key
# DATABASE_URL=postgres://user:pass@receipt-splitter-db.internal:5432/receipt_splitter